<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:foregroundGravity="center_vertical"
    android:background="@color/fifty_seventy_color_background"
    android:id="@+id/parenLayout"
    android:orientation="vertical"
    android:padding="5dp">
        <views.WaveView
            android:id="@+id/wave"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                android:layout_gravity="top">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/hours"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:id="@+id/textView4"
                            android:textColor="#ffffffff"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/min"
                            android:textColor="#ffffffff"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ampm"
                            android:textSize="20dp"
                            android:textColor="#ffffffff"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewDate"
                        android:textSize="15dp"
                        android:textColor="#ffffffff"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:weightSum="1">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewBattery"
                            android:src="@drawable/battery_charging" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/textViewBattery"
                            android:textColor="#ffffffff"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginLeft="-5dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fast Charging Enabled"
                        android:id="@+id/textViewSuperCharging"
                        android:textColor="#ffffff"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:id="@+id/AdScrollView"
            android:layout_gravity="bottom"
            android:visibility="visible"
            android:fillViewport="false">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/AdIcon"
                        android:maxHeight="72dp"
                        android:maxWidth="72dp"
                        android:minHeight="72dp"
                        android:minWidth="72dp"
                        android:layout_gravity="top" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="top">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:visibility="visible"
                            android:textColor="@color/abc_primary_text_material_dark"
                            android:id="@+id/AdTitle"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/AdDescription"
                            android:textColor="@color/abc_primary_text_material_dark"
                            android:lines="1"
                            android:maxLines="1" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AdimageView"
                    android:layout_gravity="top"
                    android:layout_marginTop="-30dp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
            android:layout_weight="0.00000001">

                <at.markushi.ui.CircleButton
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    app:cb_pressedRingWidth="8dip"
                    android:layout_gravity="bottom|center"
                    android:id="@+id/unlock"
                    android:src="@drawable/ic_lock_white_48dp"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Unlock"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingBottom="10dp" />

            </LinearLayout>
    </LinearLayout>

</FrameLayout>
